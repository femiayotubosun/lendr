{
  "include": [
  "**/*"
],
  "exclude": [
    "node_modules",
    "build"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "incremental": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "declaration": false,
    "moduleResolution": "node",
    "outDir": "dist",
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "rootDir": "./",
    "baseUrl": "./",
    "sourceMap": true,
    "paths": {
      "@web/*": [
        "./web/*"
      ],
      "@config/*": [
        "./config/*"
      ],
      "@domain/*": [
        "./domain/*"
      ],

    }
  }
}
